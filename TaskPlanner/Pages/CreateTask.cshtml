@page
@model TaskPlanner.Pages.CreateTaskModel
@{
    ViewData["Title"] = "Создать новую задачу";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NewTask.Title" class="control-label"></label>
                <input asp-for="NewTask.Title" class="form-control" />
                <span asp-validation-for="NewTask.Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewTask.Description" class="control-label"></label>
                <textarea asp-for="NewTask.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="NewTask.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewTask.DueDate" class="control-label"></label>
                <input asp-for="NewTask.DueDate" type="date" class="form-control" />
                <span asp-validation-for="NewTask.DueDate" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NewTask.IsCompleted" /> @Html.DisplayNameFor(model => model.NewTask.IsCompleted)
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Создать задачу</button>
            <a asp-page="/Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
