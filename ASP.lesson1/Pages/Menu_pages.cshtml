@page
@model ASP.lesson1.Pages.Index1Model
@{
    ViewData["Title"] = "Меню";
}

<style>
    body {
        background-image: url('/images/sakura.jpg');
        background-size: cover;
        background-position: center;
        color: black;
        font-family: Arial, sans-serif;
    }

    .menu-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px; /* Отступ между карточками меню */
        margin: 20px; /* Отступ снаружи */
    }

    .menu-item {
        background-color: rgba(255, 255, 255, 0.8); /* Полупрозрачный белый фон */
        border-radius: 8px;
        overflow: hidden; /* Скрывает части изображения, выходящие за границы */
        width: 300px; /* Фиксированная ширина карточки */
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Тень для улучшения видимости */
        padding: 10px; /* Отступы внутри карточки */
    }

        .menu-item img {
            width: 100%; /* Ширина изображения по всей карточке */
            height: 300px; /* Фиксированная высота для всех изображений */
            object-fit: cover; /* Изображение заполняет всю область, сохраняя пропорции */
        }

        .menu-item h3 {
            margin: 10px 0; /* Отступы сверху и снизу у заголовка */
        }

        .menu-item p {
            padding: 5px 0; /* Отступы сверху и снизу у цены */
            font-size: 16px; /* Размер шрифта для цены */
            color: red; /* Цвет шрифта для цены */
        }
</style>



<div class="menu-container">
    <div class="menu-item">
        <img src="/images/menu/sushi.png" alt="Sushi" />
        <h3>Sushi</h3>
        <p>Цена: 500 руб.</p>
    </div>
    <div class="menu-item">
        <img src="/images/menu/ramen.png" alt="Ramen" />
        <h3>Ramen</h3>
        <p>Цена: 450 руб.</p>
    </div>
    <div class="menu-item">
        <img src="/images/menu/tempura.png" alt="Tempura" />
        <h3>Tempura</h3>
        <p>Цена: 600 руб.</p>
    </div>
    <div class="menu-item">
        <img src="/images/menu/takoyaki.png" alt="Takoyaki" />
        <h3>Takoyaki</h3>
        <p>Цена: 400 руб.</p>
    </div>
    <div class="menu-item">
        <img src="/images/menu/miso-soup.png" alt="Miso Soup" />
        <h3>Miso Soup</h3>
        <p>Цена: 250 руб.</p>
    </div>
</div>
